<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="taskManager2._0.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="Please fill the required information for our sponsor"></Label>
            <Picker x:Name="AccountTypePicker"
                        Title="Choose Account Type"
                        TextColor="#333"
                        HeightRequest="70"
                        Margin="0,4,0,0">
                <Picker.Items>
                    <x:String>Staff</x:String>
                    <x:String>Costumer</x:String>
                </Picker.Items>
            </Picker>
            <Entry
                x:Name="userName"
                Placeholder="Your Name"
                Keyboard="Text" />
            <Entry
                x:Name="userPassword"
                Placeholder="Enter password"
                Keyboard="Text" />

            <Button
                x:Name="LoginButton"
                Text="Login"
                BackgroundColor="#007AFF"
                TextColor="#FFF"
                HeightRequest="70"
                Clicked="OnLoginButtonClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
