<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="taskManager2._0.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <CollectionView x:Name="TaskListView"
                          HeightRequest="150">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#DDD" StrokeThickness="1" StrokeShape="RoundRectangle 12">
                            <Label Text="{Binding}" Padding="12,8" TextColor="#fff" />
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
